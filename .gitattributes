*.html text eol=lf
*.js text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.lock text eol=lf

# Treat images and fonts as binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Node modules
node_modules/ -diff -merge -text

# Build output
dist/ -diff -merge -text

# Environment files
.env* text eol=lf export-ignore
